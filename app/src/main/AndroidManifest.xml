<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loginapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginApp">

        <!-- Main Launcher Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"> <!-- Must be true for launcher activities -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Secondary Activity (MainActivity) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- false since it doesn't need to be exposed to other apps -->

    </application>
</manifest>